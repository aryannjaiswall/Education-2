extends base.jade


block content 
    div.contact-page-div-h1
      h1.contactpage-h1
        | Contact Us
    section.contactpage
      form(action='/signup' method='POST')
        label(for='name') Name
        br
        input(type='name' name='name' placeholder='Enter your name')
        br
        label(for='email') Email
        br
        input(type='email' name='email' placeholder='Enter your Email')
        br
        label(for='topic') Topic
        br
        input(type='text' name='topic' placeholder='Enter the topic')
        br
        label(for='age') Age
        br
        input(type='number' name='age' placeholder='Enter your age')
        br
        label(for='address') Address
        br
        input(type='text' name='address' placeholder='Enter your Address')
        br
        label(for='suggest') Any Suggestions...
        br
        textarea(name='suggest' id='' cols='30' rows='10' placeholder='Any Suggestions for us') 
        br
        div.inSub
          input(type='submit' value='Submit').contactButton.ctbtn#ctbt
        